<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background_view"
    android:orientation="vertical"
    android:padding="@dimen/default_layout_margin"
    tools:context=".vNextDemos.AvatarViewDemoActivity">

    <!--Circle-->

    <Switch
        android:id="@+id/change_background"
        android:layout_width="wrap_content"
        android:text="Change Background"
        android:switchPadding="40dp"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/use_transparency"
        android:layout_width="wrap_content"
        android:text="Use Transparency"
        android:switchPadding="40dp"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/show_presence"
        android:layout_width="wrap_content"
        android:text="Show Presence"
        android:switchPadding="40dp"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/is_oof"
        android:layout_width="wrap_content"
        android:text="Show Out Of Office"
        android:switchPadding="40dp"
        android:layout_height="wrap_content"/>
    <Switch
        android:id="@+id/show_rings"
        android:layout_width="wrap_content"
        android:text="Show Rings"
        android:switchPadding="40dp"
        android:layout_height="wrap_content"/>
</LinearLayout>